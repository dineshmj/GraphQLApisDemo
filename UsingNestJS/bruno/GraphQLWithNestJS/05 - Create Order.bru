meta {
  name: 05 - Create Order
  type: graphql
  seq: 11
}

post {
  url: http://localhost:3000/graphql
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{VAR_JWT}}
}

body:graphql {
  mutation {
    createOrder(
      input: {
        customerName: "Training User"
        productIds: [1, 2, 3]
      }
    ) {
      id
      customerName
      items {
        product {
          name
        }
        quantity
      }
    }
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
