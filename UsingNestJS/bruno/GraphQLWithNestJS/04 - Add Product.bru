meta {
  name: 04 - Add Product
  type: graphql
  seq: 11
}

post {
  url: http://localhost:3000/graphql
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{VAR_JWT}}
}

body:graphql {
  mutation {
    addProduct(
      name: "Training Marker"
      price: 30.50
      categoryId: 1
    ) {
      id
      name
      price
    }
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
